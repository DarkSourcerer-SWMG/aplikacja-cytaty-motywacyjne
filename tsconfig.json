{
  "compilerOptions": {
    "module": "commonjs",
    "types": ["node", "jest"],
    "target": "es2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "include": ["src/**/*"]
}
